<h2>Risorse eliminate</h2>

<h2>Le nostre Scarpa</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono scarpe nel cestino</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Immagine Scarpa</th>
                <th scope="col">Immagine Aggiuntiva</th>
                <th scope="col">Immagine Aggiuntiva</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scarpa in Model)
            {
                <tr>
                    <td scope="col">@scarpa.IdScarpa</td>
                    <td scope="col">@scarpa.Nome</td>
                    <td scope="col">@scarpa.Descrizione</td>
                    <td scope="col">@scarpa.Prezzo</td>
                    <td scope="col">@scarpa.ImgScarpa</td>
                    <td scope="col">@scarpa.ImgAgg1</td>
                    <td scope="col">@scarpa.ImgAgg2</td>
                    <td scope="col">@scarpa.DeletedAt</td>
                    <td scope="col">
                        <form style="display: inline" asp-controller="Scarpa" asp-action="Recover" method="post">
                            <input type="hidden" name="IdScarpa" value="@scarpa.IdScarpa" />
                            <button type="submit" class="btn btn-primary">Ripristina</button>
                        </form>
                        <form style="display: inline" asp-controller="Scarpa" asp-action="Delete" method="post">
                            <input type="hidden" name="IdScarpa" value="@scarpa.IdScarpa" />
                            <button type="submit" class="btn btn-danger">Elimina per sempre</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}